// Firestore Security Rules - Enhanced Security for Fynco
// Copy this content to your Firebase Console -> Firestore Database -> Rules
// 
// VERSION 2.0 - Includes validation for encrypted data structure

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to ensure authenticated user owns the document
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function validateUserData() {
      return resource.data.userId == request.auth.uid;
    }
    
    // Helper function to validate encrypted data structure
    function isValidEncryptedData(data) {
      return data is map && 
             'encrypted' in data && 
             'iv' in data && 
             'version' in data &&
             data.encrypted is string &&
             data.iv is string &&
             data.version is number;
    }
    
    // Helper function to validate that sensitive fields are encrypted
    function hasEncryptedFields(data, fields) {
      return fields.hasAll(data.keys()) 
        ? fields.toSet().hasAll(
            data.keys().toSet().intersection(fields.toSet())
              .hasOnly(data.keys().toSet().filter(k => isValidEncryptedData(data[k])))
          )
        : true;
    }
    
    // Users collection - users can only access their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);
      
      // Accounts subcollection - strict ownership validation
      match /accounts/{accountId} {
        allow read, write: if isOwner(userId) && 
          (request.method == 'get' || validateUserData());
        allow create: if isOwner(userId) && 
          request.resource.data.userId == userId;
      }
      
      // Transactions subcollection - strict ownership validation
      match /transactions/{transactionId} {
        allow read, write: if isOwner(userId) && 
          (request.method == 'get' || validateUserData());
        allow create: if isOwner(userId) && 
          request.resource.data.userId == userId;
      }
      
      // Goals subcollection
      match /goals/{goalId} {
        allow read, write: if isOwner(userId) && 
          (request.method == 'get' || validateUserData());
        allow create: if isOwner(userId) && 
          request.resource.data.userId == userId;
      }
      
      // Recurring transactions subcollection
      match /recurringTransactions/{recurringId} {
        allow read, write: if isOwner(userId) && 
          (request.method == 'get' || validateUserData());
        allow create: if isOwner(userId) && 
          request.resource.data.userId == userId;
      }
      
      // Movements/Activity subcollection
      match /movements/{movementId} {
        allow read, write: if isOwner(userId) && 
          (request.method == 'get' || validateUserData());
        allow create: if isOwner(userId) && 
          request.resource.data.userId == userId;
      }
    }
    
    // Deny all other access explicitly
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
